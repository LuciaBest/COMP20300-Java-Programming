        <CheckBox fx:id="isCustomizedStartPoint" layoutX="15.0" layoutY="236.0" mnemonicParsing="false"
                  text="Customized Start Point"/>
        <Label layoutX="228.0" layoutY="34.0" text="Simonâ€™s Race">
